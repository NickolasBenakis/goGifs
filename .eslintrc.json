{
	"extends": ["airbnb", "react-app", "prettier", "prettier/react"],
	"plugins": ["prettier", "react", "import", "jsx-a11y", "react-hooks"],
	"rules": {
		"react-hooks/rules-of-hooks": "error",
		"no-console": "warn",
		"prettier/prettier": "error",
		"react/prop-types": "off",
		"react/jsx-filename-extension": "off",
		"import/prefer-default-export": "off",
		"no-nested-ternary": "off",
		"no-underscore-dangle": [2, { "allow": ["__REDUX_DEVTOOLS_EXTENSION__"] }]
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
